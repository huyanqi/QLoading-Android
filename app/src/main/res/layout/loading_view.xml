<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="144dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/loading_sun"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/loading_light_in"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/loading_light1"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/loading_light_out"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/loading_light2"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/loading_eye"
            android:layout_width="52dp"
            android:layout_height="16dp"
            android:src="@mipmap/loading_eye"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:src="@mipmap/loading_mouth"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loading_eye"/>

        <ImageView
            android:id="@+id/loading_cloud"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/loading_cloud"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>

